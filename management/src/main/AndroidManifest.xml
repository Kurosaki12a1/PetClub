<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <meta-data
        android:name="com.google.firebase.ml.vision.DEPENDENCIES"
        android:value="barcode" />

    <application>
        <activity android:name=".presentation.home.HomeActivity" />
        <activity
            android:name=".presentation.product.add_product.AddProductActivity"
            android:launchMode="singleTask" />
        <activity android:name=".presentation.product.add_info_product.AddInfoProductActivity" />
        <activity android:name=".presentation.product.detail_product.DetailProductActivity" />
        <activity android:name=".presentation.product.edit_product.EditProductActivity" />
    </application>

</manifest>